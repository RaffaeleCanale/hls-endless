{
  "name": "infinite-live-hls",
  "version": "0.1.0",
  "description": "It is a HLS server that streams a 30 minutes test live video in loop, four audio/video bitrates and an audio-only are available in this playlist m3u8.",
  "main": "index.js",
  "scripts": {
    "test": "istanbul cover node_modules/mocha/bin/_mocha --default-excludes=./test --reporter=html",
    "start": "./node_modules/pm2/bin/pm2 start app.js -i max  --name=livehls",
    "stop": "./node_modules/pm2/bin/pm2 kill"
  },
  "keywords": [
    "hls",
    "live",
    "video",
    "video-test",
    "m3u8",
    "iOS",
    "streaming"
  ],
  "author": "Maxwell Dayvson Da Silva",
  "license": "MIT",
  "devDependencies": {
    "chai": "^1.9.2",
    "istanbul": "^0.3.2",
    "mocha": "^1.21.4",
    "sinon": "^1.10.3",
    "supertest": "^0.14.0"
  },
  "dependencies": {
    "cors": "^2.4.2",
    "express": "^4.9.5",
    "pm2": "^0.10.8"
  }
}
